{
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/__coverage__",
    "coveragePathIgnorePatterns": [
        "/node_modules",
        "/dist/",
        "jest.setup.js"
    ],
    "coverageReporters": [
        "json",
        "lcov",
        "text-summary"
    ],
    "moduleNameMapper": {
        "\\.(css|pcss)$": "identity-obj-proxy"
    },
    "setupFiles": [
        "<rootDir>/jest.setup.js"
    ],
    "testRegex": ".*(test|spec)\\.jsx?$",
    "testPathIgnorePatterns": [
        "/node_modules/"
    ]
} 