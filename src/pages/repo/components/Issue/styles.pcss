.Issue {
    background: white;
    border: 1px solid rgba(0, 0, 0, 0.5);
    border-radius: 15px;
    margin: 0 15px 15px 0;
    padding: 30px;
    flex-basis: 300px;

    & .header {
        display: flex;
        align-items: center;

        & > img {
            width: 40px;
            height: 40px;
            margin-right: 25px;
        }
    }

    & > time {
        display: block;
    }
}
